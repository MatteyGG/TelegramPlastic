generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        Int      @id @default(autoincrement())
  userId    String   @unique
  username  String?
  createdAt DateTime @default(now())

  @@map("admins")
}

model Product {
  id          Int      @id @default(autoincrement())
  title       String
  material    String
  diameters   String // JSON string
  colors      String // JSON string
  links       String // JSON string
  weight      String?
  description String
  characteristics String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("products")
}

model DialogHistory {
  id        Int      @id @default(autoincrement())
  chatId    String
  username  String? // Добавляем поле для username
  role      String // 'user' или 'assistant'
  message   String
  timestamp DateTime @default(now())
  products  String? // JSON с продуктами, если были упомянуты

  @@index([chatId])
  @@index([timestamp])
  @@index([username])
}

model Response {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String

  @@map("responses")
}

model Prompt {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String

  @@map("prompts")
}
